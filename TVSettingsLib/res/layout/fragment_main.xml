<com.appo.tvsettings.lib.BorderRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:appo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootview"

     >

    <TextView
        android:id="@+id/title"
        style="@style/activity_title"
         />

    <RelativeLayout 
        android:layout_width="match_parent"
   		android:layout_height="match_parent"
   		android:layout_below="@id/title"
   		android:layout_marginTop="36px"
   		android:layout_marginBottom="60px"
		android:clipChildren="false"
		android:clipToPadding="false"
        >
        <com.appo.tvsettings.lib.ScaleListView
         android:id="@+id/listview"
         style="@style/listview"
         android:layout_centerHorizontal="true"
         android:background="@drawable/shape_listview_bg"
          />
    </RelativeLayout>
     
      
      <ImageView 
          android:id="@+id/bottomCover"
          android:layout_width="match_parent"
          android:layout_height="190px"
          android:layout_alignParentBottom="true"
          android:background="@drawable/shape_bottomcover_bg"
          />

</com.appo.tvsettings.lib.BorderRelativeLayout>