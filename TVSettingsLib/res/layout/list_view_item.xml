<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="190px"
    android:background="@drawable/listitem_bg"
     >

    <ImageView
        android:id="@+id/markicon"
        android:layout_width="84px"
        android:layout_height="84px"
        android:layout_centerVertical="true"
        android:layout_marginStart="30dp"
     />
    
    <LinearLayout 
        android:id="@+id/centerTexts"
        android:layout_width="558dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/markicon"
        android:layout_marginStart="36dp"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        
        >
      <TextView
        android:id="@+id/marktext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="start"
        android:textColor="#ffffff"
        android:textAlignment="viewStart" 
        android:textDirection="locale"
        android:textSize="40px"
        />

      <TextView
        android:id="@+id/summarytext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:gravity="start"
        android:textColor="@color/main_item_second_color"
        android:textSize="16sp"
        />    
        
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/rightViewsGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal"
        >
      <ImageView
        android:id="@+id/lefticon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/leftarrow" />
      <TextView
        android:id="@+id/righttext"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="16sp"
         />
      <ImageView
        android:id="@+id/righticon"
        android:layout_width="84px"
        android:layout_height="84px"
        android:layout_marginEnd="74px"
        android:layout_gravity="center_vertical"
        android:background="@drawable/rightarrow"/>
     </LinearLayout>
     
</RelativeLayout>